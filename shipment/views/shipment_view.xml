    <menuitem name="List" id="shipment.menu_1_list" parent="shipment.menu_1"
              action="shipment.action_window"/>
    <menuitem name="Server to list" id="shipment" parent="shipment.menu_2"
              action="shipment.action_server"/>
-->
  </data>
</odoo>